@model FSC_BOL.Models.Login.FSCLogin
@{
    /**/

    Layout = "~/Views/MasterPage/AdminPanelLoginMaster.cshtml";
}
@using (Html.BeginForm("DoLogin", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <body style="margin-top:15px;">
        @if (@ViewBag.MsgType != null)
        {
            if (@ViewBag.MsgType != "Success")
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.Msg
                </div>
            }
        }
        <div class="container login-container">
            <div class="row">
                <div class="col-md-6 login-form-1">
                    <h3>Login To Admin Panel</h3>
                    <form>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Email) })
                            @Html.ValidationMessage("Email")
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Password), @type = "password" })
                            @Html.ValidationMessage("Password")
                        </div>
                        <div class="form-group">
                            <input type="submit" class="width-35 pull-left btn btn-small btn-primary" value="Login" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
}